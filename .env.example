# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
APP_NAME=Aprils Pest Control Dashboard
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# =================================
# DOCKER CONFIGURATION
# =================================
# Docker Compose service ports
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=4000
FRONTEND_PORT=3000
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081

# Build target (development or production)
BUILD_TARGET=development

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=pestcontrol_dev

# Full connection URL (used by backend)
DATABASE_URL=postgresql://postgres:password@localhost:5432/pestcontrol_dev

# Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false
DATABASE_LOGGING=true

# =================================
# REDIS CACHE CONFIGURATION
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# =================================
# AUTHENTICATION & SECURITY
# =================================
# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-use-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers (Auth0)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_CALLBACK_URL=http://localhost:3000/callback

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =================================
# EMAIL CONFIGURATION (SendGrid)
# =================================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@aprilspestcontrol.com
SUPPORT_EMAIL=support@aprilspestcontrol.com
SENDGRID_TEMPLATE_ID_WELCOME=
SENDGRID_TEMPLATE_ID_RESET_PASSWORD=
SENDGRID_TEMPLATE_ID_APPOINTMENT_CONFIRMATION=

# =================================
# SMS CONFIGURATION (Twilio)
# =================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_VERIFY_SERVICE_SID=

# =================================
# PAYMENT PROCESSING (Stripe)
# =================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=usd
STRIPE_PAYMENT_METHODS=card,ach_debit

# =================================
# FILE STORAGE (AWS S3)
# =================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=pestcontrol-uploads
S3_BUCKET_REGION=us-east-1
S3_PUBLIC_URL=https://pestcontrol-uploads.s3.amazonaws.com

# CloudFront CDN (optional)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=

# =================================
# MAPPING & GEOLOCATION
# =================================
# Google Maps API
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_VERSION=weekly

# MapBox (Alternative)
MAPBOX_ACCESS_TOKEN=
MAPBOX_STYLE_URL=

# Route Optimization
ROUTE_OPTIMIZATION_PROVIDER=google
ROUTE_OPTIMIZATION_MAX_STOPS=25

# =================================
# MONITORING & LOGGING
# =================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog APM
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# Log Level
LOG_LEVEL=debug
LOG_FORMAT=json

# =================================
# ANALYTICS & METRICS
# =================================
# Mixpanel
MIXPANEL_TOKEN=
MIXPANEL_SECRET=

# Google Analytics
GA_TRACKING_ID=
GA_MEASUREMENT_ID=

# =================================
# FEATURE FLAGS
# =================================
ENABLE_AI_FEATURES=true
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_CHEMICAL_TRACKING=true
ENABLE_CUSTOMER_PORTAL=true
ENABLE_MOBILE_APP=false
ENABLE_WEBHOOKS=true
ENABLE_API_RATE_LIMITING=true
ENABLE_TWO_FACTOR_AUTH=false

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# WEBHOOK CONFIGURATION
# =================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3

# =================================
# QUEUE CONFIGURATION (Bull/Redis)
# =================================
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRY_ATTEMPTS=3

# =================================
# FRONTEND SPECIFIC (Vite)
# =================================
VITE_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000
VITE_GOOGLE_MAPS_API_KEY=
VITE_STRIPE_PUBLIC_KEY=
VITE_SENTRY_DSN=
VITE_ENVIRONMENT=development

# =================================
# DEVELOPMENT TOOLS
# =================================
# pgAdmin
PGADMIN_EMAIL=admin@aprilspestcontrol.com
PGADMIN_PASSWORD=admin

# =================================
# PRODUCTION DEPLOYMENT
# =================================
# Server Configuration (for deployment)
PRODUCTION_HOST=
PRODUCTION_USERNAME=
STAGING_HOST=
STAGING_USERNAME=

# SSL/TLS Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# =================================
# COMPLIANCE & REGULATORY
# =================================
# Data Retention
DATA_RETENTION_DAYS=2555
CUSTOMER_DATA_RETENTION_DAYS=3650

# Privacy
ENABLE_GDPR_MODE=false
ENABLE_CCPA_MODE=false

# Chemical Tracking Compliance
CHEMICAL_TRACKING_STATE=CA
REQUIRE_PESTICIDE_LICENSE=true
