# Application
NODE_ENV=development
PORT=3000
APP_NAME="April's Pest Control CRM"
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pestcontrol
DB_PASSWORD=pestcontrol_dev_password
DB_DATABASE=pestcontrol_crm
DB_SYNC=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# AWS S3 (File Upload)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=pestcontrol-uploads
AWS_S3_ENDPOINT=

# Email (SendGrid/SES)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@aprilspestcontrol.com
EMAIL_FROM_NAME=April's Pest Control

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_BULL_BOARD=true
ENABLE_API_DOCS=true

# Third-party Integrations
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=

PESTPAC_API_KEY=
PESTPAC_API_URL=

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
